# ===========================================
# TRADE COMPLIANCE ENGINE - ENVIRONMENT CONFIG
# ===========================================
# Copy this file to .env.local and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OpenAI Configuration (for document verification AI)
OPENAI_API_KEY=sk-your-openai-api-key

# Twilio Configuration (for WhatsApp notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Companies House API
COMPANIES_HOUSE_API_KEY=your-companies-house-api-key

# Upstash Redis (for rate limiting and caching)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Trade Compliance Engine

# Verification Settings
MIN_PUBLIC_LIABILITY_COVERAGE=2000000
MIN_EMPLOYERS_LIABILITY_COVERAGE=10000000
DOCUMENT_EXPIRY_WARNING_DAYS=30,14,7,3,1
PAYMENT_BLOCK_GRACE_PERIOD_DAYS=0

# Security
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
WEBHOOK_SECRET=your-webhook-signing-secret

# Cron Job Authentication
CRON_SECRET=your-cron-secret-key

# Feature Flags
ENABLE_WHATSAPP_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_GAS_SAFE_VERIFICATION=true
ENABLE_FRAUD_DETECTION=true

# Rate Limiting
RATE_LIMIT_PUBLIC_VERIFY=100
RATE_LIMIT_API_REQUESTS=1000

# Logging
LOG_LEVEL=info
